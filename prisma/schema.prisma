generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Candidate {
  id        String   @id @default(cuid())

  // Form data
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  email     String   @unique
  phone     String?
  birthDate String?  @map("birth_date")
  heightCm  Int?     @map("height_cm")
  instagram String?
  tiktok    String?
  city      String?
  category  String?

  // Photos (URLs)
  photoUrls String[] @map("photo_urls")

  // Review status
  status      CandidateStatus @default(PENDING)
  reviewedAt  DateTime?       @map("reviewed_at")
  reviewedBy  String?         @map("reviewed_by")

  // Brevo integration
  brevoContactId String? @map("brevo_contact_id")
  emailSequenceStartedAt DateTime? @map("email_sequence_started_at")

  // Sales tracking (for approved candidates)
  salesStage String?  @map("sales_stage")
  salesNotes String?  @map("sales_notes")
  tags       String[] @default([])

  // Telegram tracking
  telegramMessageId String? @map("telegram_message_id")
  telegramChatId    String? @map("telegram_chat_id")

  // Metadata
  submittedAt DateTime  @map("submitted_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  scheduledEmails ScheduledEmail[]

  @@map("candidates")
}

model ScheduledEmail {
  id          String   @id @default(cuid())
  candidateId String   @map("candidate_id")
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  emailNumber  Int      @map("email_number")    // 1, 2, or 3
  templateId   Int      @map("template_id")     // Brevo template ID (3, 4, or 5)
  subject      String                           // Email subject for display
  scheduledFor DateTime @map("scheduled_for")   // When Brevo will send it

  status    EmailStatus @default(SCHEDULED)
  sentAt    DateTime?   @map("sent_at")

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([candidateId, emailNumber])
  @@map("scheduled_emails")
}

enum EmailStatus {
  SCHEDULED
  SENT
  FAILED
}

enum CandidateStatus {
  PENDING
  APPROVED
  REJECTED
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("tags")
}
